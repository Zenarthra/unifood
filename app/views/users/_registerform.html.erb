<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :firstname, "First name" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :firstname, class: "form-control", placeholder: "Enter your Firstname", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :lastname, "Last name" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :lastname, class: "form-control", placeholder: "Enter your Lastname", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :address, "Address" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :address, class: "form-control", placeholder: "Enter your Address", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :postcode, "Postcode" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :postcode, class: "form-control", 
              placeholder: "Enter your postcode", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :contact, "Contact no." %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :contact, class: "form-control", 
              placeholder: "Enter your contact number", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
      <%= f.submit(@user.new_record? ? "Create my account" : "Update my account", class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <center><div class="center colormatch">
  [ <%= link_to "Already have an account? Login now!", login_path %> ]
  </div></center>
  </div>
</div>

